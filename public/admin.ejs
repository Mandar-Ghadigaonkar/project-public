<!DOCTYPE html>

<html>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> Admin Login Form </title>
    <link rel="stylesheet" href="admin.css" />
</head>

<body>
    <div class="container">
        <form action="dashboard.html">
            <h2> Admin Login </h2>
            <div class="input-field">
                <input type="email" required />
                <label>Enter email</label>
            </div>
            <div class="input-field">
                <input type="password" required />
                <label>Enter password</label>
            </div>
            <div class="forget">
                <label for="Save-login">
                    <input type="checkbox" id="Save-login" />
                    <p>Save login information</p>
                </label>
                <a href="forgot.html" id="forgotPassword">Forgot password?</a>
            </div>
            <button type="submit">Log In</button>
            <!-- <div class="Create-account">
                <p>Don't have an account? <a href="registration.html">Create account</a></p>
            </div> -->
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        // Function to handle the "Forgot password?" link click event
        document.getElementById('forgotPassword').addEventListener('click', function(event) {
            event.preventDefault(); // Prevent default action of the link (i.e., navigating to the href)

            // Define translations
            const translations = {
                en: {
                    title: 'Forgot Password',
                    message: 'Forgot password functionality will be implemented soon.',
                    confirmButtonText: 'OK'
                },
                // Add translations for other languages if needed
                // For example:
                // fr: {
                //     title: 'Mot de passe oublié',
                //     message: 'La fonctionnalité de mot de passe oublié sera bientôt implémentée.',
                //     confirmButtonText: 'OK'
                // }
            };

            // Get the user's preferred language (you can implement this dynamically)
            const language = 'en'; // Default to English

            // Show a modal dialog with translated text
            Swal.fire({
                icon: 'info',
                title: translations[language].title,
                text: translations[language].message,
                confirmButtonText: translations[language].confirmButtonText
            }).then((result) => {
                if (result.isConfirmed) {
                    // Redirect the user to the "forgot.html" page
                    window.location.href = 'forgot.html';
                }
            });
        });
    </script>
</body>

</html>
